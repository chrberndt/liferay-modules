<root available-locales="en_US,de_DE" default-locale="en_US">
<!--
    project.xml: A structure for a content object of 
    type "project", which is a short description of a
    client project.
    
    Created:    2015-12-01 14:44 by Christian Berndt
    Modified:   2015-12-01 14:44 by Christian Berndt
    Version:    1.0.0
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the liferay-modules repo, too.
-->
	<dynamic-element dataType="document-library" fieldNamespace="ddm" indexType="keyword" localizable="true" name="keyvisual" readOnly="false" repeatable="false" required="true" showLabel="true" type="ddm-documentlibrary" width="">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Keyvisual]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Select an image from the document library which will be used as the keyvisual for this project description.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="headline" readOnly="false" repeatable="false" required="true" showLabel="true" type="text" width="large">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Headline]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter short but descriptive headline for the project description.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="client" readOnly="false" repeatable="false" required="true" showLabel="true" type="text" width="large">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the client's name, which is used as button label in the control bar.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="clientBackgroundColor" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client Background Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default color. This value is used as the color of the button in the control bar.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="clientFontColor" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client Font Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default font color. This value is used as the font color of the button in the control bar.]]>
			</entry>
		</meta-data>
	</dynamic-element>
</root>