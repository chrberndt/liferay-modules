<root available-locales="en_US,de_DE" default-locale="en_US">
<!--
    project.xml: A structure for a content object of 
    type "project", which is a short description of a
    client project.
    
    Created:    2015-12-01 14:44 by Christian Berndt
    Modified:   2016-01-09 14:03 by Christian Berndt
    Version:    1.0.2
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the liferay-modules repo, too.
-->
	<dynamic-element dataType="document-library" fieldNamespace="ddm" indexType="keyword" localizable="true" name="keyvisual" readOnly="false" repeatable="false" required="true" showLabel="true" type="ddm-documentlibrary" width="">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Keyvisual]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Select an image from the document library which will be used as the keyvisual for this project description.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Schlüsselbild]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Wähle ein Bild aus der Dokumentenbibliothek aus, das als Schlüsselbild für das Projekt benutzt werden soll.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="client" readOnly="false" repeatable="false" required="true" showLabel="true" type="text" width="large">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the client's name. This value is also used as button label for controls.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Client]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Gib den Namen des Kunden ein. Dieser Wert wird auch für die Beschriftung von Bedienelementen benutzt.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="headline" readOnly="false" repeatable="false" required="true" showLabel="true" type="text" width="large">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Headline]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter short but descriptive headline for the project description.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Headline]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Gib dem Projekt eine kurze beschreibende Überschrift.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="description" readOnly="false" repeatable="false" required="true" showLabel="true" type="textarea" width="small">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Description]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter a short description of the project.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Description]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Verfasse eine kurze Beschreibung des Projekts. Beschränke Dich auf die relevantesten Aspekte.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="link-to-page" fieldNamespace="ddm" indexType="keyword" localizable="true" name="detailLink" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-link-to-page" width="small">
		<dynamic-element dataType="string" indexType="keyword" localizable="true" name="linkLabel" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
			<meta-data locale="en_US">
				<entry name="label">
					<![CDATA[Button Label]]>
				</entry>
				<entry name="predefinedValue">
					<![CDATA[]]>
				</entry>
				<entry name="tip">
					<![CDATA[Enter a short label for the link to the detail page (optional).]]>
				</entry>
			</meta-data>
			<meta-data locale="de_DE">
				<entry name="label">
					<![CDATA[Beschriftung]]>
				</entry>
				<entry name="predefinedValue">
					<![CDATA[]]>
				</entry>
				<entry name="tip">
					<![CDATA[Gib einen kurzen Text für die Beschriftung des Links zur Detailseite ein.]]>
				</entry>
			</meta-data>
		</dynamic-element>
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Details]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Select the page, where a more detailed description of the project can be found.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Detailseite]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Wähle die Seite aus, mit auf der es weiterführende Informationen zu diesem Projekt gibt.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="href" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
		<dynamic-element dataType="string" indexType="keyword" localizable="true" name="hrefLabel" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
			<meta-data locale="en_US">
				<entry name="label">
					<![CDATA[Link Label]]>
				</entry>
				<entry name="predefinedValue">
					<![CDATA[]]>
				</entry>
				<entry name="tip">
					<![CDATA[Enter a label for this link.]]>
				</entry>
			</meta-data>
			<meta-data locale="de_DE">
				<entry name="label">
					<![CDATA[Link Beschriftung]]>
				</entry>
				<entry name="predefinedValue">
					<![CDATA[]]>
				</entry>
				<entry name="tip">
					<![CDATA[Gib dem Link zum Projekt eine Beschriftung.]]>
				</entry>
			</meta-data>
		</dynamic-element>
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Link]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the link to the project. The link must start with "http://" or "https://"]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Link]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Gib den Link zum Projekt an. Der Link muss mit "http://" oder "https://" beginnen.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="clientBackgroundColor" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client Background Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default color. This value is used as the color of the button in the control bar.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Client Background Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default color. This value is used as the color of the button in the control bar.]]>
			</entry>
		</meta-data>
	</dynamic-element>
	<dynamic-element dataType="string" indexType="keyword" localizable="true" name="clientFontColor" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="small">
		<meta-data locale="en_US">
			<entry name="label">
				<![CDATA[Client Font Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default font color. This value is used as the font color of the button in the control bar.]]>
			</entry>
		</meta-data>
		<meta-data locale="de_DE">
			<entry name="label">
				<![CDATA[Client Font Color]]>
			</entry>
			<entry name="predefinedValue">
				<![CDATA[]]>
			</entry>
			<entry name="tip">
				<![CDATA[Enter the hexadecimal code of the client's default font color. This value is used as the font color of the button in the control bar.]]>
			</entry>
		</meta-data>
	</dynamic-element>
</root>