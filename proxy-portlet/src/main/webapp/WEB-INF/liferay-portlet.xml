<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
    <portlet>
        <portlet-name>proxy-portlet</portlet-name>
        <icon>/icon.png</icon>
        <configuration-action-class>ch.inofix.portlet.proxy.action.ConfigurationActionImpl</configuration-action-class>        
        <control-panel-entry-category>site_administration.configuration</control-panel-entry-category>
        <control-panel-entry-weight>100</control-panel-entry-weight>
        <!-- site wide proxy portlet preferences  -->
        <!-- see: https://www.liferay.com/de/web/pmesotten/blog/-/blogs/user-specific-versus-shared-portlet-preferences-part-1 -->
        <preferences-unique-per-layout>false</preferences-unique-per-layout>
        <preferences-owned-by-group>true</preferences-owned-by-group> 
        <layout-cacheable>true</layout-cacheable>
        <header-portlet-css>/css/main.css</header-portlet-css>
        <!--  We assume jquery to be present, e.g. included by a theme. -->
<!--         <header-portlet-javascript>/js/jquery-1.12.1.min.js</header-portlet-javascript> -->
        <footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
        <add-default-resource>true</add-default-resource>
        <system>true</system>
    </portlet>
    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>